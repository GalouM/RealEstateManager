<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    android:id="@+id/list_property_item_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/cardview_small_margin">
<LinearLayout
    android:id="@+id/list_property_item_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_list_item">

    <ImageView
        android:id="@+id/list_property_item_picture"
        android:layout_width="@dimen/size_list_item"
        android:layout_height="@dimen/size_list_item"
        android:src="@drawable/home_icon"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin_small">
        
        <TextView
            android:id="@+id/list_property_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/text_title"/>

        <TextView
            android:id="@+id/list_property_item_neighborhood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_subtitle"
            android:textColor="@color/colorTextUnactive"/>

        <TextView
            android:id="@+id/list_property_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_price"
            android:textColor="@color/colorAccent"/>
        
        
    </LinearLayout>

</LinearLayout>
</androidx.cardview.widget.CardView>